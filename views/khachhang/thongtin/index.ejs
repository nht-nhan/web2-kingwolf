                                                            <div class="form-group">
                                                                <label>Xác Nhận Mật Khẩu Mới</label>
                                                                <input type="password" required name="pw_moi_2" minlength="9" class="form-control"  placeholder="**********">
                                                            </div>
                                                        </div>
                                                        <div class="kt-portlet__foot">
                                                            <div class="kt-form__actions">
                                                                <button type="submit" name="btn_pw" value="1" class="btn btn-primary">Thay đổi</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
